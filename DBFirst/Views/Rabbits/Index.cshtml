@model IEnumerable<DBFirst.Rabbit>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form class="form-inline my-2 my-lg-0" action="/Rabbits/Index" method="get">
    <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search" name="search">
    <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
</form>

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            Owner @Html.DisplayNameFor(model => model.Owner1.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner1.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RabbitID }) |
                @Html.ActionLink("Details", "Details", new { id = item.RabbitID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RabbitID })
            </td>
        </tr>
    }

</table>
